generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model User {
  id    String  @id @default(cuid())
  name  String?
  email String? @unique

  level   Int @default(1)
  xp      Int @default(0)
  life    Int @default(10)
  maxLife Int @default(10)
  gold    Int @default(0)

  streakCount        Int       @default(0)
  lastCompletionDate DateTime?

  avatarUrl String?
  inventory InventoryItem[]

  lastInactivityPenaltyAt DateTime?

  tasks Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id         String     @id @default(cuid())
  title      String
  difficulty Difficulty @default(EASY)

  dueDate     DateTime?
  completed   Boolean   @default(false)
  completedAt DateTime?

  overdueProcessedAt DateTime?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ItemType {
  POTION_SMALL
  POTION_MEDIUM
  POTION_LARGE
}

model Item {
  id        String   @id @default(cuid())
  type      ItemType @unique
  name      String
  price     Int // em gold
  healValue Int // quanto cura

  inventory InventoryItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model InventoryItem {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  itemId String
  item   Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)

  quantity Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, itemId]) // ✅ 1 linha por item por usuário
}
